<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" shutdownHook="disable">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} %level [%t] %logger{100} - %msg%n" />
    </Console>
    <File name="File" fileName="./sukuna-engine/logs/sukuna.log">
      <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} %level [%t] %logger{100} - %msg%n" />
    </File>
  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="Console" />
      <AppenderRef ref="File" />
    </Root>
  </Loggers>
</Configuration>
